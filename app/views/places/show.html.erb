<div class="">
  <img alt="Ancestrale" class="shadow-md w-full object-cover mh-200" width="1200" height="400"
    src="https://res.cloudinary.com/dkrjpli3y/image/upload/c_fill,h_400,w_1200/<%= @place.slug %>">

  <div class="container mx-auto px-4 px-0">
    <div class="relative px-4 -mt-32 sm:-mt-48">
      <div class="p-4">
        <h1 class="font-bold text-3xl sm:text-6xl text-white"><%= @place.name %></h1>
      </div>
      <div class="bg-white rounded-lg p-4 shadow-lg">
        <div class="flex"><span
            class="inline-block px-2 py-1 leading-none bg-red-lightest text-grey-darkest font-semibold rounded-lg"><%= t(".#{@place.category}") %></span>
          <div class="px-2 py-1 text-grey-dark font-semibold"></div>
        </div>
        <div class="px-2">
          <div class="flex -mx-2 flex-wrap">
            <div class="px-2 w-full sm:w-4/5">
              <h2 class="my-3 text-xl font-normal max-w-md"><%= @place.short_description %></h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="p-4">
    <div class="container mx-auto px-4 px-0 md:px-8">
      <div class="sm:py-8 leading-loose">
        <div class="px-2">
          <div class="flex -mx-2 flex-wrap">
            <div class="pl-2 sm:pr-20 w-full sm:w-4/5">
                <%= @place.description %>
            </div>
            <div class="px-2 w-full sm:w-1/5">
              <h2 class="mb-2 text-xl text-red-600 font-semibold"><%= t('.information_header') %></h2>
              <div>
                <h3 class="my-2 text-base font-semibold"><%= t('.address_header') %></h3>
                <%= render 'location', location: @place.location %>
              </div>
              <div>
                <h3 class="my-2 text-base font-semibold"><%= t('.opening_hours_header') %></h3>
                <%= render 'opening_hour' %>
                <%= render 'opening_hour' %>
                <%= render 'opening_hour' %>
                <%= render 'opening_hour' %>
                <%= render 'opening_hour' %>
                <%= render 'opening_hour' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
