<%= form_for [:admin, area], html: { class: 'p-8' } do |f| %>
  <% if area.errors.any? %>
  <ul>
    <% area.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div>
    <%= f.label :name, class: 'block text-sm text-gray-00' %>
    <%= f.text_field :name, placeholder: 'Name', class: 'w-full px-5 py-1 text-gray-700 border rounded' %>
  </div>

  <div>
    <%= f.label :latitude, class: 'block text-sm text-gray-00' %>
    <%= f.number_field :latitude, step: :any, placeholder: 'Latitude', class: 'w-full px-5 py-1 text-gray-700 border rounded' %>
  </div>

  <div>
    <%= f.label :longitude, class: 'block text-sm text-gray-00' %>
    <%= f.number_field :longitude, step: :any, placeholder: 'Longitude', class: 'w-full px-5 py-1 text-gray-700 border rounded' %>
  </div>

  <div>
    <%= f.label :parent_id, class: 'block text-sm text-gray-00' %>
    <%= f.select :parent_id, Area.all.pluck(:name, :id), include_blank: true, class: 'w-full px-5 py-1 text-gray-700 border rounded' %>
  </div>

  <div>
    <%= f.label :description, class: 'block text-sm text-gray-00' %>
    <%= f.rich_text_area :description, placeholder: 'Long description', class: 'w-full px-5 py-1 text-gray-700 border rounded' %>
  </div>

  <div class="mt-6">
    <%= f.submit class: 'px-4 py-1 text-white tracking-wider bg-green-600 rounded' %>
  </div>
<% end %>
