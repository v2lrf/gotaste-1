<div class="p-3 w-full sm:w-1/2 lg:w-1/3">
  <%= link_to event_path(event.slug), class: 'inline-flex flex-col rounded shadow hover:shadow-md' do %>
    <%= image_tag event.cover_image, class: 'rounded-t' if event.cover_image.attached? %>
    <div class="p-4 border-b border-dotted">
      <div class="font-medium"><%= event.name %></div>
      <div class=" text-gray-600"><%= l(event.begins_at) %></div>
    </div>
    <div class="px-4 py-2 text-xs">
      <div class="text-gray-600">
        <%= host.name %>
      </div>
      <div class="text-gray-500">
        <%= t('event_card.address', street_name: host.location.street_name, street_number: host.location.street_number) %>
      </div>
    </div>
  <% end %>
</div>
