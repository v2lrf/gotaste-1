<div class="min-w-full bg-white shadow-md rounded px-8 pt-8 pb-8 mb-4">
  <h1 class="mb-8 text-3xl text-center">Kom i gang</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-4">
      <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', placeholder: 'Fornavn' %>
    </div>

    <div class="mb-4">
      <%= f.text_field :last_name, autocomplete: 'last_name', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', placeholder: 'Efternavn' %>
    </div>

    <div class="mb-4">
      <%= f.email_field :email, autocomplete: 'email', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', placeholder: 'E-mail' %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password, autocomplete: 'new-password', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', placeholder: '***********' %>
    </div>

    <div class="mb-4">
      <%= f.submit t('.submit'), class: 'w-full text-center py-3 rounded bg-green-400 text-white hover:bg-green-500 focus:outline-none my-1' %>
    </div>

    <div class="mb-4">
      <div class="text-center text-sm text-grey-dark mt-4">
        Ved oprettelse accepterer du samtidig vores
        <a class="no-underline border-b border-grey-dark text-grey-dark" href="#">vilk√•r og betingelser</a>.
      </div>
    </div>
  <% end %>
</div>

<div class="text-grey-dark mt-6">
  Har du allerede en profil?
  <%= link_to 'Log ind', new_session_path(resource_name), class: 'no-underline border-b border-red-400 text-red-400' %>.
</div>
