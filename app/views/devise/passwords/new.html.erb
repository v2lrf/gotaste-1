<div class="min-w-full bg-white shadow-md rounded px-8 pt-8 pb-8 mb-4">
  <h1 class="mb-8 text-3xl text-center">Har du glemt din adgangskode?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', placeholder: 'E-mail' %>
    </div>

    <div class="mb-4">
      <%= f.submit "Nulstil adgangskode", class: 'w-full text-center py-3 rounded bg-green-400 text-white hover:bg-green-500 focus:outline-none my-1' %>
    </div>
  <% end %>
</div>
