<div class="min-w-full bg-white shadow-md rounded px-8 pt-8 pb-8 mb-4">
  <h1 class="mb-8 text-3xl text-center">Log ind</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', placeholder: 'E-mail' %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password, autocomplete: 'new-password', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', placeholder: '***********' %>
    </div>

    <div class="mb-4">
      <%= f.submit "Log ind", class: 'w-full text-center py-3 rounded bg-green-400 text-white hover:bg-green-500 focus:outline-none my-1' %>
    </div>
  <% end %>
</div>

